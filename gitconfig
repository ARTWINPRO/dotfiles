[core]
	editor       = vim
	excludesfile = ~/.gitignore_global
[color]
	ui = true
[alias]
	st   = status
	co   = checkout
	ci   = commit
	br   = branch -a
	df   = diff
	dfs  = diff --staged
	logg = log --graph --decorate --oneline --abbrev-commit --all
[mergetool]
	keepBackup = true
[include]
    path = ~/.gitconfig_local
