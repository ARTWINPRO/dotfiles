[alias]
    a = add
    aa = add --all
    ap = add --patch
    au = add --update

    b = branch

    c = commit
    ca = commit --amend
    ci = commit --interactive
    cm = commit --message
    cv = commit --verbose

    d = diff
    dc = diff --cached
    ds = diff --staged
    dw = diff --word-diff

    f = flow

    ff = flow feature
    ffs = flow feature start
    ffp = flow feature publish

    fh = flow hotfix
    fhs = flow hotfix start
    fhp = flow hotfix publish

    l = log
    lg = log --graph
    lk = log --graph --topo-order --abbrev-commit --date=short --decorate --all --boundary --pretty=format:'%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%cn]%Creset'
    lo = log --oneline
    lp = log --patch
    lt = log --topo-order

    o = checkout
    ob = checkout -b

    s = status -sb

[color]
    ui = auto
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
[diff]
    tool = vimdiff
[help]
    autocorrect = 10
[include]
    path = ~/.gitconfig_local
[push]
    default = current
