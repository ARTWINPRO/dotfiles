# HTML

text/html;       rm -rf ~/.tmp/mutt_attach/* \; mkdir -p ~/.tmp/mutt_attach \; cp -f %s ~/.tmp/mutt_attach/$(basename %s).html \; xdg-open ~/.tmp/mutt_attach/$(basename %s).html &; test=type xdg-open > /dev/null 2>&1
text/html;       w3m -I %{charset} -T text/html; copiousoutput

