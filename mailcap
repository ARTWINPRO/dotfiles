#application/pdf; rm -rf ~/.tmp/mutt_attach/* \; mkdir -p ~/.tmp/mutt_attach \; cp -f %s ~/.tmp/mutt_attach \; open     ~/.tmp/mutt_attach/$(basename %s) &; test=type open     > /dev/null 2>&1
#application/pdf; pdftotext %s -; copiousoutput

# Default most other things to xdg-open

application/*;   rm -rf ~/.tmp/mutt_attach/* \; mkdir -p ~/.tmp/mutt_attach \; cp -f %s ~/.tmp/mutt_attach \; xdg-open ~/.tmp/mutt_attach/$(basename %s) &; test=type xdg-open > /dev/null 2>&1

audio/*;         rm -rf ~/.tmp/mutt_attach/* \; mkdir -p ~/.tmp/mutt_attach \; cp -f %s ~/.tmp/mutt_attach \; xdg-open ~/.tmp/mutt_attach/$(basename %s) &; test=type xdg-open > /dev/null 2>&1

image/*;         rm -rf ~/.tmp/mutt_attach/* \; mkdir -p ~/.tmp/mutt_attach \; cp -f %s ~/.tmp/mutt_attach \; xdg-open ~/.tmp/mutt_attach/$(basename %s) &; test=type xdg-open > /dev/null 2>&1

text/csv;        rm -rf ~/.tmp/mutt_attach/* \; mkdir -p ~/.tmp/mutt_attach \; cp -f %s ~/.tmp/mutt_attach \; xdg-open ~/.tmp/mutt_attach/$(basename %s) &; test=type xdg-open > /dev/null 2>&1

